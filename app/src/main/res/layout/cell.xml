<!-- res/layout/item.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="30dp">

    <TextView
        android:id="@+id/column_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/column_name"
        android:textColor="@color/brown"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/to_column_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/to_column_name"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:fontFamily="@font/montserrat"
        android:textSize="18sp"
        android:textColor="@color/brown"
        android:background="@drawable/to_column_name"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/column_name"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>